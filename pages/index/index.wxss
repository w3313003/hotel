.title {
    width: 100vw;
    display: block;
    color: #dbc982;
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    height: 60px;
    line-height: 60px;
    margin-top: 40rpx;
}

.index-content {
    width: 90vw;
    margin: 0 auto;
    background: #fff;
    border-radius: 5px;
}

.row1 {
    display: flex;
    justify-content: space-around;
    width: 90%;
    margin: 0 auto;
    padding-bottom: 10px;
    border-bottom: 1px solid #ccc;
}

.curr-time {
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #666;
    text-align: center;
}

.picker {
    font-size: 40rpx;
    color: #004483;
}

.days {
    height: 80rpx;
    line-height: 80rpx;
    width: 90%;
    margin: 0 auto;
    color: #004483;
    border-bottom: 1px solid #ccc;
    text-align: center;
    font-size: 40rpx;
}

.roomtype {
    height: 80rpx;
    line-height: 80rpx;
    width: 90%;
    margin: 0 auto;
    border-bottom: 1px solid #ccc;
    display: flex;
    font-size: 30rpx;
    color: #666;
}
.roomcontent{
    flex: 1;
    display: flex;
    overflow-x: scroll;
    overflow-y: visible;
}
.roomcontent{
    box-sizing: border-box;
    padding-left: 10rpx;
    color: red;
    white-space: nowrap;
}
.mask{
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .5);
  position: absolute;
  left: 0;
  top: 0;
  border-bottom: 1px solid #ccc;
}
.roomwrap{
  padding: 20px 0;
  display: flex;
  width: 90%;
  margin: 0 auto;
  border-bottom: 1px solid #ccc;
}
.roomprice{
  color: red;
}
.control{
  flex:1;
  display: flex;
  text-align: right;
  justify-content: flex-end;
  align-items: center;
}
.roomtypeshow{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  font-size: 30rpx;
  font-size:40rpx;
  border-radius: 5px;
  z-index:2;
}
.addbtn,.d-addbtn,.less{
    height: 40rpx;
    width: 40rpx;
}
.addbtn image,
.d-addbtn image,
.less image{
    width: 100%;
    height: 100%;
}
.count{
    width: 50rpx;
    font-size: 40rpx;
    text-align: center;
    color: #004483;
}
.roomname{
    font-size: 40rpx;
    color: #666;
}
.totalsum{
    flex: 1;
    text-align: right;
}
.totalprice{
    height: 300rpx;
    width: 90%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.p-title{
   font-size: 30rpx;
   color: #666;
}
.p-price{
    font-size: 40rpx;
    color: #e73131;
}
.confrim-wrap{
    height: 120rpx;
    display: flex;
    align-items: center;
}
.confrim-btn{
    width: 30%;
    height: 60rpx;
    line-height: 60rpx;
    margin: 0 auto;
    background: #e73131;
    color: #fff;
    text-align: center;
    border-radius: 5px;
    font-size: 35rpx;
}